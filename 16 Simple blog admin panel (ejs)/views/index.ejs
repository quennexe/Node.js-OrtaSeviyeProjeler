<% layout('layout') -%>

    <h2>Yazılar</h2>

    <% if (posts.length === 0) { %>
        <p>Henüz yazı eklenmedi.</p>
        <% } else { %>
            <ul>
                <% posts.forEach(post => { %>
                    <li>
                        <h3>
                            <%= post.title %>
                        </h3>
                        <p>
                            <%= post.content %>
                        </p>
                        <form action="/delete/<%= post.id %>" method="POST">
                            <button type="submit">Sil</button>
                        </form>
                    </li>
                    <% }) %>
            </ul>
            <% } %>